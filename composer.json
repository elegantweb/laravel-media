{
    "name": "elegantweb/laravel-media",
    "description": "Media library for the Laravel framework.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sina Sharifzade",
            "email": "sharifzadesina@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "laravel/framework": "^11.0|^12.0",
        "intervention/image": "^3.11"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Elegant\\Media\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elegant\\Media\\Tests\\": "tests/",
            "Elegant\\Media\\Tests\\Database\\Factories\\": "tests/database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Elegant\\Media\\MediaServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
